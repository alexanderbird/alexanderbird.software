{
  "name": "alexanderbird.softare",
  "version": "0.0.1",
  "description": "Resume Website",
  "main": "html/index.html",
  "scripts": {
    "deploy": "rm -rf html/_test && s3-static-website-deploy --domain alexanderbird.software --region ca-central-1 --directory html",
    "build": "gulp --gulpfile gulp/gulpfile.js --cwd .",
    "build:fast": "gulp --gulpfile gulp/gulpfile.js --cwd . build",
    "build:fast:prepare": "gulp --gulpfile gulp/gulpfile.js --cwd . build:tmp",
    "start": "cd html && http-server",
    "test:reset": "cd test && rm -r shots_base/* && bundle exec wraith history config.yaml",
    "test": "cd test && bundle exec wraith latest config.yaml || true && open shots/gallery.html"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git-codecommit.ca-central-1.amazonaws.com/v1/repos/alexanderbird.software"
  },
  "keywords": [
    "static-website"
  ],
  "author": "Alexander Bird",
  "license": "UNLICENSED",
  "gulp": {
    "buildDirectory": "html",
    "buildAssetsDirectory": "assets",
    "buildIconsBasename": "icons",
    "sourceDirectory": "src/html",
    "sourceAssetsDirectory": "src/assets",
    "sourceIconsDirectory": "src/icons",
    "sourceRawPagesDirectory": "src/raw-pages",
    "sourceContentDirectory": "src/content",
    "pageTemplateDirectory": "src/html/pages",
    "tmpRootDirectory": "tmp",
    "tmpDirectory": "tmp/dynamic",
    "handlebars": {
      "partialsDirectory": [
        "src/html",
        "tmp"
      ]
    }
  },
  "devDependencies": {
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-autoprefixer": "^6.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-ext-replace": "^0.3.0",
    "gulp-handlebars-html": "0.0.2",
    "gulp-json-handlebars": "^1.0.6",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-svg-sprite": "^1.5.0",
    "gulp-wrap": "^0.14.0",
    "gulp-yaml": "^2.0.2",
    "handlebars-inline": "^1.0.0",
    "http-server": "^0.11.1",
    "pluralize": "^7.0.0",
    "require-dir": "^1.1.0",
    "s3-static-website-deploy": ">0.0.1"
  },
  "dependencies": {
    "marked": "^0.6.0"
  }
}
