<!-- Search Engine -->
<meta name="description" content="{{ html-unescape description }}">
<meta name="image" content="{{site-image}}">
<!-- Schema.org for Google -->
<meta itemprop="name" content="{{ html-unescape title }}">
<meta itemprop="description" content="{{ html-unescape description }}">
<meta itemprop="image" content="{{site-image}}">
<!-- Twitter -->
<meta name="twitter:title" content="{{ html-unescape title }}">
<meta name="twitter:description" content="{{ html-unescape description }}">
<meta name="twitter:site" content="{{twitter-handle}}">
<meta name="twitter:creator" content="{{twitter-handle}}">
<meta name="twitter:image:src" content="{{site-image}}">
<!-- Open Graph general (Facebook, Pinterest & Google+) -->
<meta name="og:title" content="{{ html-unescape title }}">
<meta name="og:description" content="{{ html-unescape description }}">
<meta name="og:image" content="{{site-image}}">
<meta name="og:url" content="{{domain}}">
<meta name="og:site_name" content="{{ html-unescape title }}">
<meta name="og:locale" content="en_CA">
<meta name="og:type" content="website">
