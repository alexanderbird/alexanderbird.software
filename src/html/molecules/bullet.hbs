{{#if bullet.main}}
<li class='
    molecules__bullet
    molecules__bullet__main-and-sub
    {{#if bullet.collapsible}}molecules__bullet--collapsible{{/if}}
  '>
  <span class='molecules__bullet__main'>{{{bullet.main}}}</span>
  <ul class='molecules__bullet__sub'>
    {{#each bullet.sub}}
      {{> molecules/bullet bullet=this }}
    {{/each}}
  </ul>
</li>
{{else if bullet.subtitle}}
  <div>{{{bullet.subtitle}}}</div>
  <ul>
    {{#each bullet.bullets}}
      {{> molecules/bullet bullet=this }}
    {{/each}}
  </ul>
{{else if bullet.preface}}
<li class='molecules__bullet'>
  <span class='preface'>{{{bullet.preface}}}</span>
  <span>{{{bullet.text}}}</span>
</li>
{{else}}
<li class='molecules__bullet'>{{{bullet}}}</li>
{{/if}}
